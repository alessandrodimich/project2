<% provide(:title, "Reset Password") %>

<div class="container">

  <div class="form-signin">
    <h2 class="form-signin-heading">Reset Password</h2>
    <%= form_tag password_resets_path,:id => "password_reset-form", role: "form", :method => :post do %>
    <div class="form-group">
      <label class="control-label" for="email">Email Address</label>
      <%= email_field_tag :email, params[:email], :placeholder => "Email", :class => "form-control", :id => "email" %>
    </div>
      <%= submit_tag "Reset your password", class: "btn btn-lg btn-primary btn-block" %>
      <% end %>
  </div>
</div> <!-- /container -->
